{
    "authors": [
        "enalye"
    ],
    "copyright": "Copyright Â© 2023, Enalye",
    "description": "Framework 2D pour Grimoire",
    "license": "Zlib",
    "name": "atelier",
    "targetType": "executable",
    "targetName": "atelier",
    "targetPath": "bin",
    "workingDirectory": ".",
    "dependencies": {
        "grimoire": {
            "path": "grimoire"
        },
        "bindbc-sdl": "~>1.4.2",
		"audio-formats": "~>3.0.1",
		"bindbc-openal": "~>1.1.0"
    },
    "versions": [
        "BindSDL_Static",
        "SDL_2_26",
        "SDL_Image_2_6",
        "SDL_TTF_2_20"
    ],
    "subConfigurations": {
        "bindbc-sdl": "static"
    },
    "libs-windows": [
        "libs/$PLATFORM/$ARCH/SDL2",
        "libs/$PLATFORM/$ARCH/SDL2_image",
        "libs/$PLATFORM/$ARCH/SDL2_ttf",
		"libs/$PLATFORM/$ARCH/OpenAL32"
    ],
	"copyFiles-windows": [
		"libs/$PLATFORM/$ARCH/SDL2.dll",
		"libs/$PLATFORM/$ARCH/SDL2_image.dll",
		"libs/$PLATFORM/$ARCH/SDL2_ttf.dll",
		"libs/$PLATFORM/$ARCH/OpenAL32.dll"
	],
    "lflags-posix": [
        "-L-Llibs/$PLATFORM/$ARCH/",
        "-L-lz"
    ],
    "libs-posix": [
        "SDL2",
        "SDL2_image",
        "SDL2_ttf",
		"OpenAL32"
    ],
    "configurations": [
        {
            "name": "atelier_debug",
            "targetPath": "bin",
            "dflags": ["-gf"],
            "versions": [
                "AtelierDev",
                "AtelierDebug"
            ]
        },
        {
            "name": "atelier_dev",
            "versions": [
                "AtelierDev"
            ],
            "targetPath": "export",
            "targetName": "atelier"
        },
        {
            "name": "atelier_rt",
            "versions": [
                "AtelierRT"
            ],
            "targetPath": "export",
            "targetName": "atelierrt"
        }
    ]
}