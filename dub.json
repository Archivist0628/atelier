{
    "authors": [
        "enalye"
    ],
    "copyright": "Copyright Â© 2023, Enalye",
    "description": "Moteur 2D pour Grimoire",
    "license": "Zlib",
    "name": "atelier",
    "targetName": "atelier",
    "workingDirectory": ".",
    "dependencies": {
        "grimoire": {
            "path": "grimoire"
        },
        "farfadet": {
            "path": "farfadet"
        },
        "bindbc-sdl": "~>1.4.2",
        "audio-formats": "~>3.0.1",
        "bindbc-openal": "~>1.1.0"
    },
    "versions": [
        "BindSDL_Static",
        "SDL_2_26",
        "SDL_Image_2_6",
        "SDL_TTF_2_20"
    ],
    "subConfigurations": {
        "bindbc-sdl": "static"
    },
    "libs-windows": [
        "$PACKAGE_DIR/libs/$PLATFORM/$ARCH/SDL2",
        "$PACKAGE_DIR/libs/$PLATFORM/$ARCH/SDL2_image",
        "$PACKAGE_DIR/libs/$PLATFORM/$ARCH/SDL2_ttf"
    ],
    "copyFiles-windows": [
        "$PACKAGE_DIR/libs/$PLATFORM/$ARCH/SDL2.dll",
        "$PACKAGE_DIR/libs/$PLATFORM/$ARCH/SDL2_image.dll",
        "$PACKAGE_DIR/libs/$PLATFORM/$ARCH/SDL2_ttf.dll"
    ],
    "lflags-posix": [
        "-L-L$PACKAGE_DIR/libs/$PLATFORM/$ARCH/",
        "-L-lz"
    ],
    "libs-posix": [
        "SDL2",
        "SDL2_image",
        "SDL2_ttf"
    ],
    "configurations": [
        {
            "name": "atelier_debug",
            "targetPath": "bin",
            "targetType": "executable",
            "targetName": "atelier_debug",
            "dflags": [
                "-gf"
            ],
            "versions": [
                "AtelierDebug",
                "AtelierExe"
            ]
        },
        {
            "name": "atelier_core",
            "targetType": "library",
            "targetName": "atelier",
            "targetPath": "../bin",
            "versions": [
                "AtelierCore"
            ]
        },
        {
            "name": "atelier_dll",
            "targetType": "dynamicLibrary",
            "targetPath": "export",
            "targetName": "atelier",
            "versions": [
                "AtelierDLL"
            ]
        },
        {
            "name": "atelier_dll_debug",
            "targetType": "dynamicLibrary",
            "targetPath": "bin",
            "targetName": "atelier",
            "versions": [
                "AtelierDLL"
            ]
        },
        {
            "name": "atelier_doc",
            "targetType": "executable",
            "targetName": "atelier_doc",
            "targetPath": "../bin",
            "dflags": [
                "-gf"
            ],
            "versions": [
                "AtelierDoc",
                "AtelierExe"
            ]
        }
    ],
    "subPackages": [
        "./app",
        "./studio"
    ]
}