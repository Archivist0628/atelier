module atelier.world.lighting.light.point;

import atelier.common;
import atelier.world.lighting.light.base;

final class PointLight : Light {
    @property {
        override float brightness() const {
            return _brightness;
        }

        float brightness(float brightness_) {
            return _brightness = brightness_;
        }

        override float radius() const {
            return _radius;
        }

        float radius(float radius_) {
            return _radius = radius_;
        }

        override Color color() const {
            return _color;
        }

        Color color(Color color_) {
            return _color = color_;
        }
    }

    this(Vec2i position_, float radius_) {
        super(position_, radius_);
    }

    override void update() {
    }
}
